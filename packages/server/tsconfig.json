{
  "extends": "../../tsconfig.json",
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "**/dist",
    "node_modules",
    "**/node_modules",
    "**/*.spec.js",
    "**/*.spec.ts",
    "**/__tests__",
    "**/*.test.js",
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "module": "commonjs"
  }
}
